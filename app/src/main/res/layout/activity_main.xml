<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/startTripButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_trip_button" />

        <Button
            android:id="@+id/completeTaskButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_task_button" />

        <Button
            android:id="@+id/cancelTaskButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_task_button" />

        <Button
            android:id="@+id/endTripButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/end_trip_button" />

        <Button
            android:id="@+id/getTasksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_tasks_button" />

    </LinearLayout>


</FrameLayout>
